{
  "name": "miroza",
  "version": "1.0.0",
  "description": "MIROZA is a modern, performant, accessible news / articles / blog platform scaffold.",
  "main": "sw.js",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "start": "node ./tools/static-server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:data && npm run build:css && npm run build:js && npm run build:seo",
    "build:data": "node tools/refresh-posts.js",
    "build:css": "esbuild styles/main.css --bundle --minify --outfile=styles/main.min.css",
    "build:js": "esbuild scripts/app.js --minify --target=es2018 --legal-comments=none --outfile=scripts/app.min.js",
    "build:seo": "node tools/build-seo.js",
    "build:js-wasm": "node tools/build-wasm.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PRAVINR0/miroza.git"
  },
