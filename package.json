    "url": "https://github.com/PRAVINR0/miroza/issues"
  },
  "homepage": "https://github.com/PRAVINR0/miroza#readme",
  "dependencies": {
    "puppeteer": "^22.11.1"
  },
  "devDependencies": {
    "esbuild": "^0.27.0",
    "esbuild-wasm": "^0.18.10",
    "puppeteer": "^22.11.1",
    "lighthouse": "^10.0.0"
  }
}
